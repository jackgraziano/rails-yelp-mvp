<h1>Add a Restaurant</h1>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <%= simple_form_for @restaurant do |f| %>
        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.input :phone %>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>
